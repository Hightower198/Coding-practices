def zeros(n):
    
    #no. of trailing zeros can be computed using a special case of the Polignac's formula:
    #further explanatios: https://en.wikipedia.org/wiki/Trailing_zero
    
    #first compute k
    k=1
    while 5**k <= n:
       k+=1
    k-=1;
    
    #compute the no. of trailing zeros using k
    sum=0
    for i in range(1,k+1):
        sum+=int(n/5**i)
    
    return sum
